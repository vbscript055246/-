	body(onload='startTime()', style="font-family:'DFKai-SB';")
		.limiter
			.container-login100
				.wrap-login100
					form#send-form.login100-form.validate-form(action="/signin" method="post")
						span.login100-form-title.p-b-26
							p(style="font-family:'DFKai-SB'; font-size:31pt;") 問題解決測驗平台
						//
							Times New Roman
							<span class="login100-form-title p-b-48">
							<i class="zmdi zmdi-font"></i>
							</span>
						.wrap-input100.validate-input(data-validate="Enter account")
							input.input100(type='text', name='username')
							span.focus-input100(data-placeholder='使用者帳號')
						.wrap-input100.validate-input(data-validate='Enter password')
							span.btn-show-pass
								i.zmdi.zmdi-eye
							input.input100(type='password', name='password')
							span.focus-input100(data-placeholder='使用者密碼')
						.container-login100-form-btn
							.wrap-login100-form-btn
								.login100-form-bgbtn
								button.login100-form-btn(type='submit', style="font-family:'Times New Roman'; font-size:32pt;") Login
						span(class="clearfix")
						if(message.length)
							div(id="message")
								div(class="alert alert-danger text-center") #{message}
						.text-center.p-t-115
							script.
								function startTime() {
								var today = new Date();
								var h = today.getHours();
								var m = today.getMinutes();
								var s = today.getSeconds();
								m = checkTime(m);
								s = checkTime(s);
								document.getElementById('txt1').innerHTML =
								"現在時刻:" + h + "時" + m + "分" + s + "秒";
								var t = setTimeout(startTime, 500);
								}
								function checkTime(i) {
								if (i < 10) {
								i = "0" + i
								}; // add zero in front of numbers < 10
								return i;
								}
